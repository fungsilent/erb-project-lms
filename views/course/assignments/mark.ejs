<div class="p-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
        <li class="breadcrumb-item"><a href="/course">Course</a></li>
        <li class="breadcrumb-item"><a href=# id="courseBreadcrumb"></a></li>
        <li class="breadcrumb-item active" id="assignmentBreadcrumb"></li>

    </ol>
    <div class="card">
        <div class="card-body">
            <h5 class="card-subtitle mb-2 text-muted" id="courseName"></h5>
            <h4 class="card-title" id="assignmentName"></h4>
                <form id="markAssignmentForm">
                    <div id="studentsContainer">
                        <div class="mt-4">
                            <h4>Student List</h4>
                            <div class="form-group">
                                <table class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Student Name</th>
                                            <th>Student Email</th>
                                            <th>Marks</th>
                                            <th>Submitted Assignment</th>
                                        </tr>
                                        <tbody class="student-form">
                                            <!-- student rows -->
                                        </tbody>
                                    </thead>
                                </table>
                            </div>          
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Submit Marks</button>
                </form>
        </div>
    </div>

<script>
    $(document).ready(function() {
        const assignmentId = window.location.pathname.split('/').pop();

        axios.get(`/api/assignments/${assignmentId}/mark`)
            .then(response => {
                if (response.data.success) {
                    const assignment = response.data.data;
                    $('#assignmentName').text(`Assignment: ${assignment.name}`);
                    $('#courseName').text(`Course: ${assignment.courseId.name}`);

                    // breadcrumb
                    $('#courseBreadcrumb').text(assignment.courseId.name).attr('href', `/course/detail/${assignment.courseId._id}`);
                    $('#assignmentBreadcrumb').text(`Mark ${assignment.name}`);

                    const studentsContainer = $('#studentsContainer .student-form');

                    assignment.courseId.students.forEach((student, index) => {
                        const studentMark = assignment.results.find(result => result.studentId.toString() === student._id.toString());
                        const markValue = studentMark ? studentMark.marks : '';
                        const submittedAssignment = studentMark && studentMark.studentFileUrl ? `<a href="${studentMark.studentFileUrl}" target="_blank">View Submission</a>` : 'N/A';
                        const studentForm = `
                        <tr>
                            <td>${student.name}</td>
                            <td>${student.email}</td>
                            <td>
                                <input type="number" class="form-control" id="marks_${index}" name="marks" data-student-id="${student._id}" value="${markValue}" required>
                            </td>
                            <td>${submittedAssignment}</td>
                        </tr>`;
                        studentsContainer.append(studentForm);
                    });
                } else {
                    alert(`An error occurred: ${response.data.message}`);
                }
            })
            .catch(error => {
                alert(`An error occurred: ${error.response.data.message}`);
            });

        $('#markAssignmentForm').on('submit', function(event) {
            event.preventDefault();
            const marks = [];
            const courseId = $('#courseBreadcrumb').attr('href').split('/').pop();

            $('#markAssignmentForm input[type="number"]').each(function() {
                marks.push({
                    studentId: $(this).data('student-id'),
                    marks: $(this).val()
                });
            });

            axios.post(`/api/assignments/${assignmentId}/mark`, { marks })
                .then(response => {
                    if (response.data.success) {
                        alert('Marks submitted successfully');
                        window.location.href = `/course/detail/${courseId}`;
                    } else {
                        alert('Error: ' + response.data.message);
                    }
                })
                .catch(error => {
                    alert('An error occurred. Please try again.');
                });
        });
    });
</script>
<%- contentFor('title') %>Mark Assignment

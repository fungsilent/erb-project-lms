<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding: 20px;
        }
        .header {
            text-align: center;
            margin-bottom: 40px;
        }
        .header h1 {
            margin: 0;
        }
        .user-info {
            margin-bottom: 20px;
        }
        .user-info p {
            margin: 5px 0;
        }
        .courses {
            margin-top: 20px;
        }
        .course {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Welcome, <%= user.name %></h1>
            <p>Role: <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></p>
            <a href="/logout">Logout</a>
        </div>

        <div class="user-info">
            <h2>Your Information</h2>
            <p>Email: <%= user.email %></p>
        </div>

        <div class="courses">
            <h2>Your Courses</h2>
            <% if (user.role === 'teacher') { %>
                <!-- Teacher specific content -->
                <a href="/add-course">Add New Course</a>
                <% if (courses && courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                        <div class="course">
                            <h3><%= course.name %></h3>
                            <p><%= course.description %></p>
                            <a href="/course/<%= course._id %>">View Course</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No courses available.</p>
                <% } %>
            <% } else if (user.role === 'student') { %>
                <!-- Student specific content -->
                <% if (courses && courses.length > 0) { %>
                    <% courses.forEach(course => { %>
                        <div class="course">
                            <h3><%= course.name %></h3>
                            <p><%= course.description %></p>
                            <a href="/course/<%= course._id %>">View Course</a>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>No courses assigned to you.</p>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
</html>

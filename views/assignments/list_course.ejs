<script>
    $(document).ready(() => {
        const table = $('#table').DataTable({
            ordering: true,
            searching: true,
            paging: true,
            ajax: '/api/course',
            columns: [
            { title: 'Course Name', data: 'name' },
            { title: 'Teacher', data: 'teacher.name' },
            {
                title: 'Action',
                data: '_id',
                render: function (data, type, row, meta) {
                return `<a href="/assignments/add/${data}" class="btn btn-secondary btn-sm">Add Assignment(s)</a>`;
                },
            }
            ],
        })
    })
</script>
<div class="container mt-4">
    <h2>Assignments by Course</h2>
    <table id="table" class="table table-striped table-bordered" ></table>
</div>
<%- contentFor('title') %>Course List - Assignments
